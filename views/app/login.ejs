<div class="site-wrapper">
  <div class="site-wrapper-inner">

    <div id="login" class="inner cover signup">
      <% if(flash && flash.err){ %>
      <div class="alert alert-danger" role="alert">
        <% Object.keys(flash.err).forEach(function(error){ %>
        <strong><%- flash.err[error].type %></strong>
        <%- flash.err[error].message %>
        <% }) %>
      </div>
      <% } %>
      <div class="form-wrap">
        <form role="form" action="/session/create" method="POST" role="form" id="loginForm">
          <h3>Connectez vous avec votre email</h3>

          <div class="form-group">
            <label for="email" class="sr-only">Email</label>
            <input type="email" class="form-control" name="email" placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="key" class="sr-only">Password</label>
            <input type="password" class="form-control" name="password" placeholder="Password">
          </div>
          <div class="sep"></div>
          <input type="submit" id="btn-login" class="btn btn-success btn-lg btn-block" value="Connexion">
        </form>
      </div>

    </div>

  </div>
